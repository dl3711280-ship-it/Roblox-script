local Players = game:GetService("Players")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

local function Rotate180()
    hrp.CFrame = hrp.CFrame * CFrame.Angles(0, math.rad(180), 0)
end

local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))

local rotateBtn = Instance.new("TextButton", screenGui)
rotateBtn.Size = UDim2.new(0, 150, 0, 50)
rotateBtn.Position = UDim2.new(0.4, 0, 0.8, 0)
rotateBtn.Text = "Rotate 180Â°"
rotateBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
rotateBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
rotateBtn.Font = Enum.Font.SourceSansBold
rotateBtn.TextSize = 20
rotateBtn.Visible = true

rotateBtn.MouseButton1Click:Connect(Rotate180)
