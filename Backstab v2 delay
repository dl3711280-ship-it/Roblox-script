local function mkSection(titleText, h)
	local outer = Instance.new("Frame")
	outer.Size = UDim2.new(1,0,0,h or 56)
	outer.BackgroundColor3 = Color3.fromRGB(30,30,34)
	outer.BorderSizePixel = 0
	local oc = Instance.new("UICorner"); oc.CornerRadius = UDim.new(0,10); oc.Parent = outer
	local os = Instance.new("UIStroke"); os.Thickness = 1; os.Color = Color3.fromRGB(62,62,68); os.Parent = outer
	local pad = Instance.new("UIPadding"); pad.PaddingLeft = UDim.new(0,10); pad.PaddingRight = UDim.new(0,10); pad.Parent = outer
	local t = Instance.new("TextLabel")
	t.BackgroundTransparency = 1
	t.Size = UDim2.new(1,0,0,20)
	t.Position = UDim2.new(0,0,0,6)
	t.Font = Enum.Font.SourceSansSemibold
	t.Text = titleText
	t.TextSize = 16
	t.TextXAlignment = Enum.TextXAlignment.Left
	t.TextColor3 = Color3.fromRGB(232,232,236)
	t.Parent = outer
	return outer, t
end

local function mkRow(h)
	local f = Instance.new("Frame")
	f.Size = UDim2.new(1,0,0,h or 36)
	f.BackgroundColor3 = Color3.fromRGB(36,36,40)
	f.BorderSizePixel = 0
	local c = Instance.new("UICorner"); c.CornerRadius = UDim.new(0,8); c.Parent = f
	local s = Instance.new("UIStroke"); s.Thickness = 1; s.Color = Color3.fromRGB(66,66,72); s.Parent = f
	f.Parent = body
	return f
end

